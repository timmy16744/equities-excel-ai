# Equities AI Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=equities
POSTGRES_PASSWORD=equities_dev_password
POSTGRES_DB=equities_ai
POSTGRES_PORT=5432

# Full connection URL (constructed from above or override directly)
DATABASE_URL=postgresql://equities:equities_dev_password@localhost:5432/equities_ai

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# =============================================================================
# APPLICATION
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO
API_PORT=8000
FRONTEND_PORT=3000
APP_VERSION=1.0.0

# CORS (comma-separated origins, use * for development)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# AUTHENTICATION (JWT)
# =============================================================================
# IMPORTANT: Generate a secure key for production with: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE-ME-IN-PRODUCTION-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# AI PROVIDERS (Configure at least one)
# =============================================================================
# These can also be configured via the Settings UI or API after startup

# Anthropic Claude (recommended)
# Get key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI GPT-4 (alternative)
# Get key from: https://platform.openai.com/
OPENAI_API_KEY=

# Google Gemini (alternative)
# Get key from: https://aistudio.google.com/
GOOGLE_API_KEY=

# =============================================================================
# MARKET DATA PROVIDERS
# =============================================================================
# Alpha Vantage - Market data
# Get key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=

# FRED - Economic data
# Get key from: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=

# News API - News aggregation
# Get key from: https://newsapi.org/register
NEWS_API_KEY=

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Backend URL for the frontend to connect to
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# =============================================================================
# NOTE: Additional API keys can be managed via the Settings UI
# =============================================================================
# Navigate to Settings in the frontend or use:
# PUT /api/settings/{category}/{key}
